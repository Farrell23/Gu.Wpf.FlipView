<tests:EventBox x:Class="Gu.Wpf.FlipView.Tests.ManipulationBox"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:tests="clr-namespace:Gu.Wpf.FlipView.Tests"
                d:DesignHeight="300"
                d:DesignWidth="300"
                mc:Ignorable="d">
    <tests:EventBox.SwipeArea>
        <Border x:Name="InputElement"
                Background="Gainsboro"
                IsManipulationEnabled="True"
                ManipulationBoundaryFeedback="OnInput"
                ManipulationCompleted="OnEnded"
                ManipulationDelta="OnInput"
                ManipulationInertiaStarting="OnInput"
                ManipulationStarted="OnInput"
                ManipulationStarting="OnStarted">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Swipe Here</TextBlock>
        </Border>
    </tests:EventBox.SwipeArea>
</tests:EventBox>
