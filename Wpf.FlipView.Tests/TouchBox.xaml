<tests:EventBox x:Class="Wpf.FlipView.Tests.TouchBox"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:tests="clr-namespace:Wpf.FlipView.Tests"
                d:DesignHeight="300"
                d:DesignWidth="300"
                mc:Ignorable="d">
    <tests:EventBox.SwipeArea>
        <Border x:Name="InputElement"
                Background="Gainsboro"
                TouchDown="OnStarted"
                TouchMove="OnInput"
                TouchUp="OnEnded">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Swipe Here</TextBlock>
        </Border>
    </tests:EventBox.SwipeArea>
</tests:EventBox>
