<Window x:Class="Wpf.FlipView.Tests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:flipView="clr-namespace:WPF.FlipView;assembly=WPF.FlipView"
        Title="MainWindow"
        Width="525"
        Height="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <flipView:FlipView x:Name="FlipView"
                           Grid.Column="1"
                           ArrowPlacement="Inside"
                           IndexHeight="20"
                           IndexWidth="50"
                           SelectedIndex="1"
                           ShowIndex="true"
                           TransitionTime="1000">
            <flipView:FlipView.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="70" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </flipView:FlipView.Resources>
            <Border Background="Gold">
                <TextBlock Text="1" />
            </Border>
            <Border Background="Blue">
                <TextBlock Text="2" />
            </Border>
            <Border Background="Red">
                <TextBlock>3</TextBlock>
            </Border>
            <Border Background="Green">
                <TextBlock>4</TextBlock>
            </Border>
        </flipView:FlipView>
        <Grid Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              TextBlock.FontSize="12">
            <StackPanel>
                <CheckBox Content="ShowArrows" IsChecked="{Binding ElementName=FlipView, Path=ShowArrows}" />
                <ComboBox SelectedItem="{Binding ElementName=FlipView, Path=ArrowPlacement}">
                    <flipView:ArrowPlacement>Inside</flipView:ArrowPlacement>
                    <flipView:ArrowPlacement>Outside</flipView:ArrowPlacement>
                </ComboBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
